<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/drawerLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/drawerLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:orientation="vertical">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F06292">
                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="150dp"
                    android:id="@+id/itai"
                    android:src="@drawable/ic_content_cut_black_24dp"/>

                <TextView
                    android:id="@+id/a"
                    android:layout_marginLeft="0dp"
                    android:text="Tailors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/itai"
                    android:textSize="40sp"
                    android:layout_centerVertical="true"
                    android:color="#FFFFFF"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="150dp"
                    android:id="@+id/ilau"
                    android:src="@drawable/ic_opacity_black_24dp"/>
                <TextView
                    android:id="@+id/b"
                    android:text="Laundry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:layout_toRightOf="@id/ilau"
                    android:layout_centerVertical="true"
                    android:color="#000000"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#880E4F">
                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="150dp"
                    android:id="@+id/iplu"
                    android:src="@drawable/ic_build_black_24dp"/>

                <TextView
                    android:id="@+id/c"
                    android:text="Plumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iplu"
                    android:textSize="40sp"
                    android:layout_centerVertical="true"
                    android:color="#FFFFFF"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="150dp"
                    android:id="@+id/iele"
                    android:src="@drawable/ic_lightbulb_outline_black_24dp"/>
                <TextView
                    android:id="@+id/d"
                    android:text="Electrician"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:layout_toRightOf="@id/iele"
                    android:layout_centerVertical="true"
                    android:color="#000000"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F06292">
                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="150dp"
                    android:id="@+id/itec"
                    android:src="@drawable/ic_bug_report_black_24dp"/>

                <TextView
                    android:id="@+id/e"
                    android:text="Technician"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/itec"
                    android:textSize="40sp"
                    android:layout_centerVertical="true"
                    android:color="#FFFFFF"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="150dp"
                    android:id="@+id/ipai"
                    android:src="@drawable/ic_brush_black_24dp"/>
                <TextView
                    android:id="@+id/f"
                    android:text="Painter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:layout_toRightOf="@id/ipai"
                    android:layout_centerVertical="true"
                    android:color="#000000"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#880E4F">
                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="150dp"
                    android:id="@+id/icle"
                    android:src="@drawable/ic_rowing_black_24dp"/>

                <TextView
                    android:id="@+id/g"
                    android:text="Cleaners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icle"
                    android:textSize="40sp"
                    android:layout_centerVertical="true"
                    android:color="#FFFFFF"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="150dp"
                    android:id="@+id/icoo"
                    android:src="@drawable/ic_local_dining_black_24dp"/>
                <TextView
                    android:id="@+id/h"
                    android:text="Cook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:layout_toRightOf="@id/icoo"
                    android:layout_centerVertical="true"
                    android:color="#000000"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F06292">
                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="150dp"
                    android:id="@+id/igar"
                    android:src="@drawable/ic_local_florist_black_24dp"/>

                <TextView
                    android:id="@+id/i"
                    android:text="Gardener"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/igar"
                    android:textSize="40sp"
                    android:layout_centerVertical="true"
                    android:color="#FFFFFF"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="150dp"
                    android:id="@+id/imec"
                    android:src="@drawable/ic_motorcycle_black_24dp"/>
                <TextView
                    android:id="@+id/j"
                    android:text="Mechanic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:layout_toRightOf="@id/imec"
                    android:layout_centerVertical="true"
                    android:color="#000000"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu1"

        android:layout_gravity="start"
        app:headerLayout="@layout/app_header">
    </android.support.design.widget.NavigationView>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    </android.support.v4.view.ViewPager>


</android.support.v4.widget.DrawerLayout>


